# MoodMusic Environment Variables
# Copy this file to .env and fill in your values

# Flask secret key (change this to a random string)
SECRET_KEY=your-secret-key-here

# YouTube Data API v3 Key
# Get it from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your-youtube-api-key

# Google OAuth Credentials (for Gmail login and YouTube interests)
# Get them from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID for Web Application
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Set redirect URI to: http://127.0.0.1:5000/google_callback
GOOGLE_REDIRECT_URI=http://127.0.0.1:5000/google_callback
